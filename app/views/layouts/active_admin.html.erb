<!DOCTYPE html>
<html>
<head>
    <title>Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'active_admin', media: 'all' %>
    <%= stylesheet_link_tag 'active_admin_custom', media: 'all' %>
    <%= javascript_include_tag 'active_admin' %>
    <%= javascript_include_tag 'active_admin_custom' %>
</head>
<body>
    <div class="header">
        <h1>Dashboard</h1>
        <button id="toggle-sidebar">Toggle Sidebar</button>
    </div>
    <div id="sidebar">
        <%= render 'active_admin/sidebar' %>
    </div>
    <div class="content">
        <%= yield %>
    </div>
</body>
</html>